	<sql id="pageCnt">
		sp.shop_id,
		sp.shop_no,
		sp.shop_name,
		sp.shop_logo_url,
		sp.shop_addr,
		sp.shop_region,
		sp.shop_linkman,
		sp.shop_tel,
		sp.shop_scope,
		sp.shop_status,
		COUNT(DISTINCT cy.commodity_id) commodity_cnt
	</sql>

	<select id="queryPageWithCnt" resultMap="shopMap2">
	SELECT
		<include refid="pageCnt"/>
	FROM
		zlzc_shop sp
		LEFT JOIN zlzc_commodity cy ON cy.shop_id = sp.shop_id
		AND cy.del = 0
	${ew.customSqlSegment}
	</select>


